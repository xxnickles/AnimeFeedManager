<CascadingAuthenticationState>
    <Error>
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                <FocusOnNavigate RouteData="@routeData" Selector="h1" />
            </Found>
            <NotFound>
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(MainLayout)">
                    <MudContainer Class="d-flex flex-column justify-center">
                        <MudAlert Severity="Severity.Warning">Sorry, there's nothing at this address.</MudAlert>
                        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Home" Label="Go Back to Home" Size="Size.Small" Href="/" Class="mt-3" />
                    </MudContainer>
                </LayoutView>
            </NotFound>
        </Router>
    </Error>
</CascadingAuthenticationState>