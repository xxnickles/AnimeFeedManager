@using System.ComponentModel.DataAnnotations
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Email is required to access to complete set of functionality, would you like to provide your email address?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="@Valid">
            <MudTextField
                @bind-Value="@Email"
                T="string"
                Label="Email"
                InputType="InputType.Email"
                Required="true"
                RequiredError="A valid email must be provided"
                Validation="@(new EmailAddressAttribute {ErrorMessage = "The email address is invalid"})"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="ConfirmEmail" Disabled="@(!Valid)">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    private string Email { get; set; } = string.Empty;
    private bool Valid;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void ConfirmEmail()
    {
        MudDialog.Close(DialogResult.Ok(Email));
    }

}