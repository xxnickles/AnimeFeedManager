@using AnimeFeedManager.Common.Dto
@using AnimeFeedManager.Common
@if (Collection is not EmptyShortSeasonCollection)
{
    <MudGrid>
        @foreach (var series in Collection.Animes)
        {
            <MudItem xs="12" md="4" lg="3">
                <ShortAnimeCard Anime="series" Type="Type"></ShortAnimeCard>
            </MudItem>
        }
    </MudGrid>
}
else
{
    <MudAlert Severity="Severity.Warning">There are no series available in this category</MudAlert>
}

@code {

    [Parameter]
    public ShortSeasonCollection Collection { get; set; } = new EmptyShortSeasonCollection();
    
    [Parameter]
    public SeriesType Type { get; set; } = SeriesType.None;

}