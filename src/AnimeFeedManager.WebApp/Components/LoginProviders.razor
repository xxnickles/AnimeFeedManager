@inject NavigationManager NavigationManager

<MudMenu FullWidth="true" Dense="true" Variant="Variant.Text">
    <ActivatorContent>
        <MudChip Icon="@Icons.Material.Filled.Person" Color="Color.Primary">Login</MudChip>
    </ActivatorContent>
    <ChildContent>
        @foreach (var provider in _providers)
        {
            <MudMenuItem OnClick="() => NavigationManager.NavigateTo(provider.Value.Link, true)">
                @provider.Value.Label
            </MudMenuItem>
        }
    </ChildContent>
</MudMenu>

@code {

    private readonly Dictionary<string, (string Icon, string Link, string Label)> _providers = new()
    {
        {"github", (@Icons.Custom.Brands.GitHub, "/login/github", "GitHub")},
        {"twitter", (@Icons.Custom.Brands.Twitter, "/login/twitter", "Twitter")}
    };

}