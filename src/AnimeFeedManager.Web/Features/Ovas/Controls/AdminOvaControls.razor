@if (OvaInfo is not DefaultAdminOvaControlParams)
{
    <form hx-post="ovas/remove"
          hx-indicator="@LoaderSelector"
          hx-confirm="@($"Do you want remove {OvaInfo.Title} from the Ovas library?")"
          hx-target="section#main-grid"
          hx-swap="outerHTML">
        <AntiforgeryToken/>
        <input type="hidden" name="@nameof(SeriesToUpdate.Id)" value="@OvaInfo.Id"/>
        <input type="hidden" name="@nameof(SeriesToUpdate.Season)" value="@OvaInfo.Season"/>
        <input type="hidden" name="@nameof(SeriesToUpdate.Title)" value="@OvaInfo.Title"/>
        <button title="@($"Remove {OvaInfo.Title}")" type="submit" class="btn btn-error btn-xs btn-circle">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-3 w-3">
                <title>Remove @OvaInfo.Title</title>
                <desc>Removes @OvaInfo.Title from the system</desc>
                <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m6 4.125 2.25 2.25m0 0 2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z"/>
            </svg>
        </button>
    </form>

    @if (OvaInfo.HasFeed)
    {
        <form hx-post="ovas/remove-feed"
              hx-indicator="@LoaderSelector"
              hx-confirm="@($"Do you want remove feeds associated to {OvaInfo.Title}?")"
              hx-target="section#main-grid"
              hx-swap="outerHTML">
            <AntiforgeryToken/>
            <input type="hidden" name="@nameof(SeriesToUpdate.Id)" value="@OvaInfo.Id"/>
            <input type="hidden" name="@nameof(SeriesToUpdate.Season)" value="@OvaInfo.Season"/>
            <input type="hidden" name="@nameof(SeriesToUpdate.Title)" value="@OvaInfo.Title"/>
            <button title="@($"Remove {OvaInfo.Title} feed")" type="submit" class="btn btn-secondary btn-xs btn-circle">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <title>Remove @OvaInfo.Title Feed</title>
                    <desc>Removes @OvaInfo.Title feed from the system</desc>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </form>
    }
}

@code {
    [Parameter, EditorRequired] public AdminOvaControlParams OvaInfo { get; set; } = new DefaultAdminOvaControlParams();
    [Parameter, EditorRequired] public string LoaderSelector { get; set; } = string.Empty;
}