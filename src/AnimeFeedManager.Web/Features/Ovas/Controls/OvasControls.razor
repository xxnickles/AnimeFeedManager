@if (Ova is not NullOva)
{
    @switch (Ova)
    {
        case NotAvailableOva:
            <NotAvailableOvaControls/>
            break;
        case AvailableOva ova:
            <AvailableOvaControls Links="ova.Links"/>
            break;
        case SubscribedOva ova:
            <SubscribedOvaControls ControlData="@OvaControlData.MapFrom(ova, LoaderSelector)" Links="ova.Links"/>
            break;
        case UnsubscribedOva ova:
            <UnsubscribedOvaControls ControlData="@OvaControlData.MapFrom(ova, LoaderSelector)" Links="ova.Links"/>
            break;
        default:
            <div class="badge badge-error gap-2">
                <span>Nothing Yet!</span>
            </div>
            break;
    }
}

@code {
    [Parameter, EditorRequired] public BaseOva Ova { get; set; } = new NullOva();
    [Parameter, EditorRequired] public string LoaderSelector { get; set; } = string.Empty;

}