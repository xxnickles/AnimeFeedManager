<div class="flex flex-col">
    <p class="text-sm whitespace-normal mb-3">Following validation issues where found:</p>
    @foreach (var errors in ValidationErrors.Errors)
    {
        <div>
            <h4 class="font-bold text-sm">@errors.Key</h4>
            @foreach (var details in errors.Value)
            {
                <div class="text-xs">@details</div>
            }
        </div>
    }
</div>


@code {
    [Parameter, EditorRequired] public ValidationErrors ValidationErrors { get; set; } = ValidationErrors.Create([]);
}