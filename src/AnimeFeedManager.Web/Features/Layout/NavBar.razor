@using AnimeFeedManager.Features.Users.Types
<div class="navbar bg-base-100">
    <div class="navbar-start lg:hidden">
        <label for="drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </label>
    </div>
    <div class="navbar-end lg:navbar-start">
        <a href="/" class="btn btn-ghost normal-case text-xl">Anime Feed Manager</a>
        <ul class="menu menu-horizontal px-1 hidden lg:flex">
            <li>
                <NavLink class="nav-link" href="seasons" Match="NavLinkMatch.All">
                    Seasons
                </NavLink>
            </li>
            <AuthorizeView Roles="@RoleNames.Admin">
                <li>
                    <NavLink class="nav-link" href="admin">
                        Admin
                    </NavLink>
                </li>
            </AuthorizeView>
            <AuthorizeView>
                <NotAuthorized>
                    <li>
                        <NavLink class="nav-link" href="login">
                            Login
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link" href="register">
                            Register
                        </NavLink>
                    </li>
                </NotAuthorized>
                <Authorized>
                    <li>
                        <NavLink class="nav-link" href="logout">
                            Logout
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>
        </ul>
    </div>

    <div class="navbar-end lg:hidden">
        @* <ThemeSelector></ThemeSelector> *@
    </div>
</div>

