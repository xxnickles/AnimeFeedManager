@using AnimeFeedManager.Common.RealTimeNotifications
@using AnimeFeedManager.Web.Bootstrapping
@using Microsoft.Extensions.Options
@using Passwordless.Net
@inject IOptions<PasswordlessOptions> PasswordlessOptions
@inject IOptions<SignalROptions> SignalROptions

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="/"/>
    <link href="https://fonts.cdnfonts.com/css/pt-sans-2" rel="stylesheet">
    <link rel="stylesheet" href="app.css"/>
    <link rel="stylesheet" href="AnimeFeedManager.Web.styles.css"/>
    <link rel="icon" type="image/png" href="favicon.png"/>
    <RenderOnEnviroment Exclude="Environments.Development">
        <script defer src="lib/htmx/htmx.min.js"></script>
        <script defer src="lib/alpinejs/cdn.min.js"></script>
        <script defer src="lib/passwordlessdev/passwordless-client/dist/umd/passwordless.umd.min.js"></script>
        <script defer src="lib/microsoft-signalr/signalr.min.js"></script>
        <script defer src="scripts/hx-signalr.min.js" type="module"></script>
        <script defer src="scripts/client-signin.min.js" type="module"></script>
    </RenderOnEnviroment>

    <RenderOnEnviroment Include="Environments.Development">
        <script defer src="lib/htmx/htmx.js"></script>
        <script defer src="lib/alpinejs/cdn.js"></script>
        <script defer src="lib/passwordlessdev/passwordless-client/dist/umd/passwordless.umd.js"></script>
        <script defer src="lib/microsoft-signalr/signalr.js"></script>
        <script defer src="scripts/hx-signalr.js" type="module"></script>
        <script defer src="scripts/client-signin.js" type="module"></script>
    </RenderOnEnviroment>

    <script defer>
        const PASSWORDLESS_API_URL = "https://v4.passwordless.dev"; // For self-hosting, change this. This is always the default value.
        const API_KEY = "@PasswordlessOptions.Value.ApiKey"; // Replace this value with your API Key
    </script>

    <script src="./Features/Security/Login.razor.js" type="text/javascript"></script>
    <script src="./Features/Security/Register.razor.js" type="text/javascript"></script>
    @* <script defer src="_framework/blazor.web.js"></script> *@

    <HeadOutlet/>
    <title>Anime Feed Manager</title>
</head>

<body class="min-w-[380px]" hx-boost="true" hx-indicator="#page-indicator" hx-ext="signalr" signalr-connect="@SignalROptions.Value.Endpoint">

<Routes/>


<div signalr-subscribe="@ServerNotifications.SeasonProcess" hx-target="#toast-panel" hx-swap="beforeend">
</div>


<div id="toast-panel" class="toast toast-end">
</div>

<HtmxConfirm></HtmxConfirm>

</body>
</html>